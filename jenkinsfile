pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'blog_api'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/muraasra/blog_api.git'
            }
        }
    }
    stage('Build Docker Image') {
            steps {
                script {
                    bat """
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                    """
                }
            }
        }
        
        stage('Deploy Locally') {
            steps {
                script {
                    bat """
                    docker-compose down || exit 0
                    docker-compose up -d
                    """
                }
    }
}
}
